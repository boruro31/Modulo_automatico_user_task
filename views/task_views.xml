<odoo>
    <!--vista tipo formulario-->
    <record id="view_user_task_form" model="ir.ui.view">
        <field name="name">user.task.form</field>
        <field name="model">user.task</field>
        <field name="arch" type="xml">
            <form string="Tarea de Usuario">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="priority"/>
                        <field name="state"/>
                        <field name="deadline"/>
                        <field name="is_done" readonly="1"/>
                        <field name="user_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--vista tipo lista-->
    <record id="view_user_task_list" model="ir.ui.view">
        <field name="name">user.task.list</field>
        <field name="model">user.task</field>
        <field name="arch" type="xml">
            <list string="Tareas de Usuario">
                <field name="name"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="deadline"/>
                <field name="user_id" readonly="1"/>
            </list>
        </field>
    </record>

    <!--vista tipo kanban-->
    <record id="view_user_task_kanban" model="ir.ui.view">
        <field name="name">user.task.kanban</field>
        <field name="model">user.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="description"/>
                <field name="priority"/>
                <field name="deadline"/>
                <field name="state"/>
                <field name="user_id"/>
                <field name="is_done"/>

                <templates>
                    <t t-name="kanban-box">
                        <t t-if="record.priority and record.priority.raw_value">
                            <div t-att-class="'oe_janban_card user_task_kanban oe_kanban_global_click priority_' + record.priority.raw_value">
                                <t t-call="user_task_manager.kanban_content">
                                </t>
                            </div>
                        </t>

                        <t t-if="!(record.priority and record.priority.raw_value)">
                            <div t-att-class="'oe_janban_card user_task_kanban oe_kanban_global_click priority_0'">
                                <t t-call="user_task_manager.kanban_content">
                                </t>
                            </div>
                        </t>
                    </t>

                    <!--crear plantilla reutilizable para el contenido del kanban-->
                    <t t-name="user_task_manager.kanban_content">
                        <div class="o_kanban_details">
                            <div>
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>

                            <div>
                                <field name="description"/>
                            </div>

                            <div>
                                <i class="fa fa-calendar"></i>
                                <field name="deadline"/>
                            </div>

                             <div>
                                <i class="fa fa-flag"></i>
                                <field name="priority"/>
                            </div>
                        </div>

                        <div class='oe_kanban_footer d-flex justify-content-between align-items-center'>
                            <pan>
                                <i class='fa fa-user' />
                                <field name="user_id" />
                            </pan>

                            <t t-if='record.priority and record.priority.raw_value'>
                                <span class="badge badge-primary"
                                    t-attf-class="task-state-badge state-#{record.state.raw_value}">
                                    <t t-esc='record.state.value'/>
                                </span>
                            </t>
                        </div>

                        <t t-if='record.is_done and record.is_done.raw_value'>
                            <i class='fa fa-check-circle task-done' title='Tarea completada' />
                        </t>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--action para abrir la vista de lista-->
    <record id="action_user_task" model="ir.actions.act_window">
        <field name="name">Mis tareas</field>
        <field name="res_model">user.task</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p>
                Aquí puedes ver y gestionar tus tareas asignadas.
            </p>
        </field>
    </record>

    <!-- Añadir la acción al menú de usuario -->
    <menuitem id="menu_user_task_root" name="Gestor de tareas" sequence="10"/>
    <menuitem id="menu_user_task" name="Mis Tareas" parent="menu_user_task_root" action="action_user_task" sequence="20"/>


</odoo>